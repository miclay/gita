#!/usr/bin/env node

var program = require('commander')
	,gita = require('../lib/gita')
	,pkg = require('../package')
	,argv=process.argv;
	
program
	.usage('<Commands> [Options]')
	.version(pkg.version)

program
	.command('conf')
	.alias('set')
	.description('轻松配置，为你所用！')
	.action(function() {
		gita.conf();
	});

program
	.command('mreq [name]')
	.alias('mr')
	.description('创建并提交MergeRequest分支')
	.action(function(name) {
		//从master同步到当前分支
		//创建临时分支mr_user_0918_2
		//把mr_user_0918_2推送到origin
		console.log(name);
	});

program
	.command('status')
	.description('查看当前项目的状态。')
	.action(function() {
		gita.status();
	});

program.parse(argv);
if(argv.length<3){
	program.outputHelp();
}

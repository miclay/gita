#!/usr/bin/env node

var program = require('commander')
	,gita = require('../lib/gita')
	,pkg = require('../package')
	,argv=process.argv;
	
program
	.usage('<Commands> [Options]')
	.version(pkg.version)

program
	.command('conf')
	.alias('set')
	.description('轻松配置，为你所用！')
	.action(function(){
		gita.setConf();
	});

program
	.command('mreq [branchName]')
	.alias('mr')
	.description('创建并提交MergeRequest分支')
	.action(function(bname){
		gita.mergeRequest(bname);
	});

program
	.command('status')
	.description('查看当前项目的状态。')
	.action(function(){
		gita.status();
	});

program.parse(argv);
if(argv.length<3){
	program.outputHelp();
}
